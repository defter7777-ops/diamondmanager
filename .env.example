# DiamondManager Environment Variables
# Copy this file to .env and update with your actual values

# Development vs Production
NODE_ENV=development
REACT_APP_ENV=development

# DiamondManager API Configuration  
REACT_APP_API_BASE_URL=http://localhost:3000

# Backend Service URLs (Production Railway Services)
REACT_APP_AUTH_SERVICE_URL=https://newapp-backend-production.up.railway.app
REACT_APP_USER_SERVICE_URL=https://user-service-production-840d.up.railway.app
REACT_APP_TEAM_SERVICE_URL=https://team-service-production.up.railway.app
REACT_APP_FEEDBACK_SERVICE_URL=https://feedback-service-production-555d.up.railway.app

# Future AI Services
REACT_APP_COACH_SERVICE_URL=https://diamond-coach-service.up.railway.app

# Application Configuration
REACT_APP_NAME="DiamondManager"
REACT_APP_VERSION=1.0.0
REACT_APP_COMPANY="Diamond Makers"

# Feature Flags
REACT_APP_ENABLE_AI_COACHING=true
REACT_APP_ENABLE_INNOVATION_HUB=true
REACT_APP_ENABLE_ANALYTICS=true

# Security
REACT_APP_ENABLE_ENCRYPTION=true
REACT_APP_SESSION_TIMEOUT=3600000

# UI/UX Configuration
REACT_APP_THEME=diamond
REACT_APP_LANGUAGE=en
REACT_APP_TIMEZONE=Europe/Helsinki

# IMPORTANT: ALL BACKEND SERVICES ARE CLOUD-BASED ON RAILWAY
# No local backend services - always use production URLs
# Services are documented, tested, and operational 24/7
# See docs/BACKEND_SERVICES_INTEGRATION.md for detailed endpoints

# Debug and Logging
REACT_APP_DEBUG=false
REACT_APP_LOG_LEVEL=warn